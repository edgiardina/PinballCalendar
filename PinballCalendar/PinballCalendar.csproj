<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>PinballCalendar</RootNamespace>
    <AssemblyName>PinballCalendar</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="7.2.0" />
    <PackageReference Include="Ical.Net" Version="5.1.0" />
    <PackageReference Include="PinballApi" Version="3.1.15" />
    <PackageReference Include="Flurl.Http" Version="4.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Areas\**" />
    <Content Remove="App_Start\**" />
    <Content Remove="fonts\**" />
    <Content Remove="Scripts\**" />
    <Content Remove="Views\**" />
    <Content Remove="Content\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Web.config" />
    <None Remove="packages.config" />
    <None Remove="Global.asax" />
    <None Remove="Global.asax.cs" />
  </ItemGroup>

</Project>